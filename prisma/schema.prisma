generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tires {
  id          Int       @id @default(autoincrement())
  images      Images[]
  name        String
  description String
  price       Int
  size        String
  quantity    Int
  type        String
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}

model Images {
  id        Int       @id @default(autoincrement())
  Tires     Tires?    @relation(fields: [tiresId], references: [id])
  tiresId   Int?
  url       String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}
